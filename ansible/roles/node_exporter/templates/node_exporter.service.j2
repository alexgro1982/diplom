[Unit]
Description=Prometheus Node Exporter
After=network-online.target
[Service]
User=node_exporter
Group=node_exporter
Type=simple
ExecStart={{ node_exporter_home }}/node_exporter \
    --web.listen-address={{ node_exporter_listen_port }}
Restart=always
RestartSec=1
[Install]
WantedBy=multi-user.target
