[Unit]
Description=AlertManager Server
After=network-online.target
[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart={{ alertmanager_home }}/alertmanager \
    --config.file=/etc/alertmanager/alertmanager.yml \
    --storage.path={{ alertmanager_home }}/data/
Restart=always
RestartSec=1
[Install]
WantedBy=multi-user.target
