[Unit]
Description=Prometheus Server
After=network-online.target
[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart={{ prometheus_home }}/prometheus \
    --config.file=/etc/prometheus/prometheus.yml \
    --storage.tsdb.path={{ prometheus_home }}/data/
Restart=always
RestartSec=1
[Install]
WantedBy=multi-user.target
